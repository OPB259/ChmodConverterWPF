<Window x:Class="ChmodConverterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chmod Converter" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBox x:Name="PermissionsInput" Width="200" Margin="10"/>
            <Button Content="Convert" Width="100" Click="Convert_Click" Margin="10"/>
            <TextBlock x:Name="ResultText" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
